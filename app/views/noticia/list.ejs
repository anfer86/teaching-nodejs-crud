<!DOCTYPE html>
<meta charset="utf-8">
<html>
<head>
	<title>CRUD de Notícias</title>

	<!-- Este é o estilo do Boostrap -->
  	<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  	<link rel="stylesheet" type="text/html" href="/css/datatables.min.css">
  
</head>
<body>

<main>
	
	<h1>Notícias</h1>

    <input class="form-control my-2" id="input_search" type="text" placeholder="Search..">

    <div class="table-responsive-sm my-custom-scrollbar table-wrapper-scroll-y">
    	<table class="table table-striped table-bordered" id="table_noticia">
        	<thead class=""/>
        	<tbody class=""/>
      	</table>
    </div>

    <button type="button" class="btn btn-success btn-inline-block col-2" id="add">Adicionar</button>

</main>

</body>

<!-- Fim do seu codigo -->
<script src="/js/jquery.js"></script>
<script src="/js/datatables.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/helper.js"></script>

<script type="text/javascript">

$(document).ready(function(){

	makeTableModel('POST','/noticia/list','table_noticia');

	createTableFilter("input_search", "table_noticia");

  $('#add').click(function(){

    window.location.href = "/noticia/add";

  })

});

</script>

</html>